@model WEB_MMT.Models.TblCategory

@{
    ViewData["Title"] = "Add_Category";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 class="text-center" style="background-color: dimgray; color: white;">Add Category</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Add_Category" class="form-horizontal" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CatName" class="control-label col-md-2">Category Name:</label>
                    <div class="col-md-10">
                        <input asp-for="CatName" class="form-control" />
                        <span asp-validation-for="CatName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <hr />

    <h2 class="mt-4">Categories</h2>
    <table class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Encrypted String</th>
                <th>AdID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (IEnumerable<WEB_MMT.Models.TblCategory>)ViewData["list"])
            {
                <tr>
                    <td>@item.CatId</td>
                    <td>@item.CatName</td>
                    <td>@item.cat_encrytped_string</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("ViewAllQuestions", new { id = item.CatId })">View Questions</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
